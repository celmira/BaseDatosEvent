<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.celmiramedina.drawerlayout_15.Layout.usuarioAsistente">

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:id="@+id/grupo"
    android:orientation="horizontal"
    android:layout_weight="9"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:padding="@dimen/img_event_bottom"
    >
    <TextView
        android:id="@+id/fotoFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        />
    <ImageView
        android:id="@+id/camara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_camera"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        />
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp">
    <TextView
        android:textColor="@color/colorAccent"
        android:text="Nombre:"
        android:textSize="@dimen/tamañoTexto"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/nombreFragmen"
        android:textSize="@dimen/tamañoTexto"
        android:gravity="bottom"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp">
        <TextView
            android:textColor="@color/colorAccent"
            android:text="Fecha Nacimiento:"
            android:textSize="@dimen/tamañoTexto"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <TextView
        android:id="@+id/fechaFrame"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:textSize="@dimen/tamañoTexto"
       />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp">
        <TextView
            android:textColor="@color/colorAccent"
            android:text="Genero:"
            android:textSize="@dimen/tamañoTexto"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/generoFrame"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp">
        <TextView
            android:textColor="@color/colorAccent"
            android:text="Correo:"
            android:textSize="@dimen/tamañoTexto"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/correoFrame"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/generoFrame"/>
</LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp">
        <TextView
            android:textColor="@color/colorAccent"
            android:text="EPS:"
            android:textSize="@dimen/tamañoTexto"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/epsFrame"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
       />
        </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp">
        <TextView
            android:textColor="@color/colorAccent"
            android:text="Intereses:"
            android:textSize="@dimen/tamañoTexto"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/interesesFrame"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />
        </LinearLayout>
<Button
    android:id="@+id/actualizar"
    android:text="Actualizar"
    android:layout_marginTop="30dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_weight="2"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>